<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bertucci.pedro.iotbrasil.geteway.AlteraGeteway">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="Alterando GATEWAY"
        android:textSize="24sp"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="Digite o novo nome"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnAlteraGateway"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/butons"
        android:text="SALVAR"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:text="Configurações/Gateway/Configuracoes-gateway/" />

    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:text="Apagar Gateway"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edtNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNome"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="phone"
        android:layout_alignRight="@+id/edtNome"
        android:layout_alignEnd="@+id/edtNome"
        android:layout_alignLeft="@+id/edtNome"
        android:layout_alignStart="@+id/edtNome"
        android:hint="Digite o Numero"/>

</RelativeLayout>

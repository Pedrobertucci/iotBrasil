<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bertucci.pedro.iotbrasil.TpcIp.MainTcp">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        android:gravity="center_vertical"
        android:text="Retorno TCP/IP  01"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/edtTcp1"
        android:layout_alignStart="@+id/edtTcp1" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="Retorno TCP/IP  01"
        android:textSize="28sp"
        android:layout_below="@+id/edtTcp1"
        android:layout_alignLeft="@+id/edtTcp1"
        android:layout_alignStart="@+id/edtTcp1" />

    <EditText
        android:id="@+id/edtTcp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="13"
        android:inputType="number"
        android:maxLength="24"
        android:layout_below="@+id/checkBox2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtTcp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="13"
        android:inputType="number"
        android:maxLength="24"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/edtTcp2"
        android:layout_alignStart="@+id/edtTcp2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/butons"
        android:text="SALVAR / ENVIAR"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
      />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bertucci.pedro.iotbrasil.geteway.MainNumeroGateway">

    <CheckBox
        android:id="@+id/checkCanal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="66dp"
        android:text="GATEWAY 01"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkCanal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkCanal1"
        android:layout_alignStart="@+id/checkCanal1"
        android:layout_below="@+id/checkCanal1"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:text="GATEWAY 02"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkCanal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkCanal2"
        android:layout_alignStart="@+id/checkCanal2"
        android:layout_below="@+id/checkCanal2"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:text="GATEWAY 03"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkCanal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center_vertical|center_horizontal|center"
        android:text="GATEWAY 04"
        android:textSize="24sp"
        android:layout_below="@+id/checkCanal3"
        android:layout_alignLeft="@+id/checkCanal3"
        android:layout_alignStart="@+id/checkCanal3" />

    <CheckBox
        android:id="@+id/checkBox17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:foregroundGravity="center_vertical|center_horizontal|center"
        android:text="Apagar Gateway"
        android:textSize="24sp"
        android:layout_below="@+id/checkCanal4"
        android:layout_alignRight="@+id/btnSalvaGateway"
        android:layout_alignEnd="@+id/btnSalvaGateway" />

    <Button
        android:id="@+id/btnSalvaGateway"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/butons"
        android:text="SALVAR / ENVIAR"
        android:textColor="@color/cardview_light_background"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:text="Configurações/Gateway/Configurações-Gateway/Numero" />
</RelativeLayout>

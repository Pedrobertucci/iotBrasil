<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bertucci.pedro.iotbrasil.configuracoes.MainConfiguracoes">

    <Button
        android:id="@+id/btnGeteway"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/butons"
        android:text="GATEWAY 2"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        android:layout_below="@+id/button8"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_marginTop="32dp"
        android:layout_alignRight="@+id/button8"
        android:layout_alignEnd="@+id/button8" />

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/butons"
        android:text="GATEWAY 1"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/butons"
        android:text="GATEWAY 4"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/butons"
        android:text="GATEWAY 3"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        android:layout_below="@+id/btnGeteway"
        android:layout_alignLeft="@+id/btnGeteway"
        android:layout_alignStart="@+id/btnGeteway"
        android:layout_alignRight="@+id/btnGeteway"
        android:layout_alignEnd="@+id/btnGeteway" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo" />
</RelativeLayout>
